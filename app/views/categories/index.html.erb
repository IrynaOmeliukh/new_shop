<h1 class="text-4xl font-bold text-center my-10">Categories</h1>

<div id="categories" class="flex flex-row justify-around my-5">
  <% @categories.each do |category| %>
    <%= render category %>
  <% end %>
</div>
<div class="flex justify-center"><%= link_to "New category", new_category_path, class:"bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-2 mt-3 border border-blue-500 hover:border-transparent rounded"%>
</div>
