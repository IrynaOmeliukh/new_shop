<div class="flex justify-center ">
  <div class="bg-slate-100 rounded-2xl border-2 shadow-x3 pt-9 px-9  max-w-5xl">
    <div class="flex flex-col items-center space-y-4">

    <%= form_with(model: category) do |form| %>
      <div>
        <%= form.label :name, style: "display: block" %>
        <%= form.text_field :name %>
      </div>

      <div class="rounded-lg py-3 my-5 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer flex justify-center">
        <%= form.submit %>
      </div>
      <% end %>
    </div>
  </div>
</div>
