<div id="<%= dom_id category %>">
  <div class="flex flex-row my-5">
    <div class="bg-slate-100  rounded-2xl border-2 shadow-x3 p-10 max-w-5xl">
      <div class="flex flex-col items-center space-y-4">
        <h3>Name: <%= category.name %></h3>

        <div class="text-center">
          <%= link_to "Edit this category", edit_category_path(category) %>
          <%# <%= link_to "Show this category", category_path(category) %>
          <%= button_to "Destroy this category", category, method: :delete,  data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
  </div>
</div>
