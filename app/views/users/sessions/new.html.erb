<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="flex flex-col bg-grey-lighter">
    <div class="container flex flex-col items-center justify-center flex-1 max-w-sm px-2 mx-auto">
      <div class="w-full px-6 py-8 text-black bg-white rounded shadow-md">
        <h1 class="mb-8 text-3xl text-center">Log in</h1>
        <div class="form-inputs">
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email@example.com" },
                input_html: {class: 'block w-full p-3 mb-4 border rounded border-grey-light'},
                placeholder: "Email",
                label: false%>
          <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                input_html: {class: 'block w-full p-3 mb-4 border rounded border-grey-light'},
                placeholder: "Password",
                label: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="flex justify-center space-x-2 form-actions">
          <%= f.button :submit, "Log in", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
