<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="flex flex-col bg-grey-lighter">
    <div class="container flex flex-col items-center justify-center flex-1 max-w-sm px-2 mx-auto">
      <div class="w-full px-6 py-8 text-black bg-white rounded shadow-md">
        <h1 class="mb-8 text-3xl text-center">Sign up</h1>
        <div class="form-inputs">
          <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: {class: 'block w-full p-3 mb-4 border rounded border-grey-light'},
                placeholder: "First Name",
                label: false%>
          <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: {class: 'block w-full p-3 mb-4 border rounded border-grey-light'},
                placeholder: "Last Name",
                label: false%>
          <%= f.input :phone,
                required: true,
                autofocus: true,
                input_html: {class: 'block w-full p-3 mb-4 border rounded border-grey-light'},
                class: 'block w-full p-3 mb-4 border rounded border-grey-light',
                placeholder: "Phone",
                label: false%>
          <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: {class: 'block w-full p-3 mb-4 border rounded border-grey-light'},
                class: 'block w-full p-3 mb-4 border rounded border-grey-light',
                placeholder: "E-mail",
                label: false%>
          <%= f.input :password,
                required: true,
                input_html: {hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)},
                input_html: {class: 'block w-full p-3 mb-4 border rounded border-grey-light'},
                class: 'block w-full p-3 mb-4 border rounded border-grey-light',
                placeholder: "Password",
                label: false %>
          <%= f.input :password_confirmation,
                required: true,
                input_html: {class: 'block w-full p-3 mb-4 border rounded border-grey-light'},
                class: 'block w-full p-3 mb-4 border rounded border-grey-light',
                placeholder: "Repeat password",
                label: false %>
        </div>
        <div class="form-actions flex space-x-2 justify-center">
          <%= f.button :submit, "Sign up", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"%>
        </div>
      <% end %>
    </div>
    <div class="mt-6 text-grey-dark">
      Already have an account?
      <%= render 'users/shared/links' %>
    </div>
  </div>
</div>
