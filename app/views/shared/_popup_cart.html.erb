<div class="flex items-center justify-between w-64">
  <div id="overlay" class="fixed inset-0 z-40 hidden w-screen h-screen bg-gray-900 bg-opacity-60"></div>

  <!-- The dialog -->
  <div id="dialog" class="fixed z-50 hidden px-8 py-6 space-y-5 -translate-x-1/2 -translate-y-1/2 bg-white rounded-md top-1/2 left-1/2 w-96 drop-shadow-lg">
    <h1 class="text-2xl font-semibold text-black">Shopping Cart</h1>

    <div class="py-5 border-t border-b border-gray-300"><%= render 'shared/cart' %></div>
    <div class="flex justify-end">
      <button id="close" class="px-5 py-2 text-white bg-indigo-500 rounded-md cursor-pointer hover:bg-indigo-700">
          Close</button>
      <% unless @cart.empty? %>
         <%= link_to 'Order', orders_path, class: "px-5 py-2 text-white bg-indigo-500 rounded-md cursor-pointer hover:bg-indigo-700"%>
      <% end %>
    </div>
  </div>
</div>
<!-- Javascript code -->
<script>
  var openButton = document.getElementById('open');
  var dialog = document.getElementById('dialog');
  var closeButton = document.getElementById('close');
  var overlay = document.getElementById('overlay');

  // show the overlay and the dialog
  openButton.addEventListener('click', function () {
      dialog.classList.remove('hidden');
      overlay.classList.remove('hidden');
  });

  // hide the overlay and the dialog
  closeButton.addEventListener('click', function () {
      dialog.classList.add('hidden');
      overlay.classList.add('hidden');
  });
</script>
