<div data-controller="modal">
  <button data-action="modal#open" class="btn-outline"><svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-700 hover:text-gray-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          <span class="absolute flex ml-4 -mt-6">
            <span class="absolute inline-flex w-3 h-3 bg-pink-400 rounded-full opacity-75 animate-ping"></span>
            <span class="relative inline-flex w-3 h-3 bg-pink-500 rounded-full"></span>
            </span></button>
  <dialog data-modal-target="modal" class="p-6">
    <button type="button" data-action="modal#close" class="absolute top-4 right-4">X</button>

    <h1>Shopping cart</h1>
    <hr class="mb-4">

    <form class="space-y-4">
      <%= render 'shared/cart' %>
      <div class="flex justify-end p-4 ">
        <button type="button" data-action="modal#close" class="px-5 py-2 m-3 text-white bg-indigo-500 rounded-md cursor-pointer hover:bg-indigo-700">
            Close</button>
        <% if @cart.present? %>
          <%= link_to 'Order', orders_path, class: "px-5 py-2 m-3 text-white bg-indigo-500 rounded-md cursor-pointer hover:bg-indigo-700"%>
        <% end %>
      </div>
    </form>
  </dialog>
</div>
