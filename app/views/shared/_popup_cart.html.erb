<div data-controller="modal">
  <%# <button data-action="modal#open" class="btn-outline">Open modal</button> %>

  <dialog data-modal-target="modal">
    <button type="button" data-action="modal#close" class="absolute top-4 right-4">X</button>

    <h1>Shopping cart</h1>

    <hr class="mb-4">

    <form class="space-y-4">
      <%# <label>Email</label> %>
      <%= render 'shared/cart' %>

      <%# <button type="button" data-action="modal#close" class="btn-outline">Close</button> %>
      <%# <button type="button" class="btn-blue">Reset Password</button> %>
      <div class="flex justify-end">
      <button type="button" data-action="modal#close" class="px-5 py-2 text-white bg-indigo-500 rounded-md cursor-pointer hover:bg-indigo-700">
          Close</button>
      <% if @cart.present? %>
         <%= link_to 'Order', orders_path, class: "px-5 py-2 text-white bg-indigo-500 rounded-md cursor-pointer hover:bg-indigo-700"%>
      <% end %>
    </div>
    </form>
  </dialog>
</div>
