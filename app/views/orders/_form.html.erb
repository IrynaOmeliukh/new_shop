<div class="flex justify-center ">
  <div class="bg-slate-100 rounded-2xl border-2 shadow-x3 p-9 mb-10 max-w-5xl">
    <div class="flex flex-col items-center space-y-4">
    <%= form_with url:orders_path(product_ids: session[:cart]), class: "contents" do |form| %>
      <div class="my-5">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
      </div>
      <div class="my-5">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
      </div>

      <div class="my-5">
        <%= form.label :address %>
        <%= form.text_field :address, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
      </div>

      <div class="my-5">
        <%= form.label :phone %>
        <%= form.text_field :phone, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
      </div>
      <div class="inline">
        <%= form.submit class: "rounded-lg my-5 py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
