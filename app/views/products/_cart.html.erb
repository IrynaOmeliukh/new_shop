

<!-- This button is used to open the dialog -->


<button id="open" class='block py-2 pl-3 pr-4 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-gray-400 md:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent'>

  <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-700 hover:text-gray-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
  </svg>
  <span class="absolute flex ml-4 -mt-6">
    <span class="absolute inline-flex w-3 h-3 bg-pink-400 rounded-full opacity-75 animate-ping"></span>
    <span class="relative inline-flex w-3 h-3 bg-pink-500 rounded-full">
    </span>
  </span>
</button>
<!-- Overlay element -->
<div id="overlay" class="fixed inset-0 z-40 hidden w-screen h-screen bg-gray-900 bg-opacity-60"></div>

<!-- The dialog -->
<div id="dialog"
    class="fixed z-50 hidden px-8 py-6 space-y-5 -translate-x-1/2 -translate-y-1/2 bg-white rounded-md top-1/2 left-1/2 w-96 drop-shadow-lg">
    <h1 class="text-2xl font-semibold text-black">Shopping Cart</h1>
    <div class="py-5 border-t border-b border-gray-300">
        <% if cart.empty? %>
          <p class="text-black">No items in the cart</p>
        <% else %>
          <ul class="text-black">
            <% cart.each do |product| %>
              <li><%= product.name %>
              <p><%= button_to 'Remove from cart', remove_from_cart_path(product), method: :delete %></p>
            </li>
            <% end %>
          </ul>
        <% end %>
      </div>
    <div class="flex justify-end">
        <!-- This button is used to close the dialog -->
        <button id="close" class="px-5 py-2 text-white bg-indigo-500 rounded-md cursor-pointer hover:bg-indigo-700">
            Close</button>
    </div>
</div>

<!-- Javascript code -->
<script>
    var openButton = document.getElementById('open');
    var dialog = document.getElementById('dialog');
    var closeButton = document.getElementById('close');
    var overlay = document.getElementById('overlay');

    // show the overlay and the dialog
    openButton.addEventListener('click', function () {
        dialog.classList.remove('hidden');
        overlay.classList.remove('hidden');
    });

    // hide the overlay and the dialog
    closeButton.addEventListener('click', function () {
        dialog.classList.add('hidden');
        overlay.classList.add('hidden');
    });
</script>
