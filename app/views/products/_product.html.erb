<div id="<%= dom_id product %>" data-controller="hello">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= Category.find(product.category_id).name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= product.status %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this product", product%>
    <%= link_to 'Edit this product', edit_product_path(product) %>
    <%= button_tag 'Add to cart', data: { action: 'click->hello#toggleToCart'} %>
    <% end %>
</div>
