<%# <p style="color: green"><%= notice %></p>
<div class="flex justify-between">
  <h1>Products</h1>
  <%= link_to "New product", new_product_path %>
</div>

  <div class="flex flex-col">
  <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
      <div class="overflow-hidden">
        <table class="min-w-full text-center">
          <thead class="border-b">
            <tr>
              <th scope="col" class="px-6 py-4 text-sm font-medium text-gray-900">
                Name
              </th>
              <th scope="col" class="px-6 py-4 text-sm font-medium text-gray-900">
                Category
              </th>
              <th scope="col" class="px-6 py-4 text-sm font-medium text-gray-900">
                Price
              </th>
              <th scope="col" class="px-6 py-4 text-sm font-medium text-gray-900">
                Status
              </th>
            </tr>
          </thead>
          <% @products.each do |product| %>
          <tbody>
            <tr class="bg-indigo-100 border-b border-indigo-200">
              <td class="px-6 py-4 text-sm font-medium text-gray-900 whitespace-nowrap">
                <%= product.name %>
              </td>
              <td class="px-6 py-4 text-sm font-light text-gray-900 whitespace-nowrap">
                <%= Category.find(product.category_id).name %>
              </td>
              <td class="px-6 py-4 text-sm font-light text-gray-900 whitespace-nowrap">
                <%= product.price %>
              </td>
              <td class="px-6 py-4 text-sm font-light text-gray-900 whitespace-nowrap">
                <%= product.status %>
              </td>
              <td class="px-6 py-4 text-sm font-light text-gray-900 whitespace-nowrap">
                <% if action_name != "show" %>
                <%= link_to "Show this product", product%>
                <br>
                <%= link_to 'Edit this product', edit_product_path(product), class:"bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" %>
                <% end %>
              </td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
