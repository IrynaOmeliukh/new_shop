<%# <%= render 'products/cart'%>

<main class="container flex flex-col mx-auto mt-5">
  <div class="flex flex-col">
  <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
      <div class="overflow-hidden">
        <%# <%= render 'shared/cart'%>
        <%= render 'products/table', products: @products %>
        <%# <%= render 'orders/form', order: @order %>
      </div>
    </div>
  </div>
</div>
</main>


<div data-controller="modal">
  <button data-action="modal#open" class="btn-outline">Shopping Cart</button>
  <dialog data-modal-target="modal">
    <button type="button" data-action="modal#close" class="absolute top-4 right-4">X</button>

    <h1>Shopping cart</h1>

    <hr class="mb-4">

    <form class="space-y-4">
      <%= render 'shared/cart' %>

      <div class="flex justify-end">
      <button type="button" data-action="modal#close" class="px-5 py-2 text-white bg-indigo-500 rounded-md cursor-pointer hover:bg-indigo-700">
          Close</button>
      <% if @cart.present? %>
         <%= link_to 'Order', orders_path, class: "px-5 py-2 text-white bg-indigo-500 rounded-md cursor-pointer hover:bg-indigo-700"%>
      <% end %>
    </div>
    </form>
  </dialog>
</div>
